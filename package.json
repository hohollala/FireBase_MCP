{
  "name": "firebase-mcp-server",
  "version": "1.0.0",
  "description": "Firebase MCP Server - Model Context Protocol server for Firebase services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "firebase-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "config/README.md",
    "commands/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc && webpack && npm run setup-commands",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "docs": "typedoc src --out docs/api",
    "docs:generate": "ts-node scripts/generate-docs.ts",
    "docs:api": "ts-node scripts/generate-docs.ts",
    "setup-commands": "node scripts/setup-fb-commands.js",
    "init": "node scripts/setup-fb-commands.js init",
    "install-commands": "npm run setup-commands",
    "postinstall": "npm run setup-commands",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm test",
    "prepack": "npm run build",
    "version": "npm run build && git add dist/",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "firebase",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "cursor",
    "gemini"
  ],
  "author": "Firebase MCP Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "firebase-admin": "^12.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typedoc": "^0.25.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/firebase-mcp/firebase-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/firebase-mcp/firebase-mcp-server/issues"
  },
  "homepage": "https://github.com/firebase-mcp/firebase-mcp-server#readme"
}