# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./config/firebase-admin-key.json

# MCP Server Configuration
MCP_SERVER_NAME=firebase-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=stdio
MCP_LOG_LEVEL=info

# Web Dashboard Configuration
WEB_DASHBOARD_ENABLED=true
WEB_DASHBOARD_PORT=3001
WEB_DASHBOARD_HOST=localhost

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/firebase-mcp.log

# Security Configuration
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:3001

# Performance Configuration
MAX_CONCURRENT_CONNECTIONS=50
REQUEST_TIMEOUT=30000
MEMORY_LIMIT=512

# Firebase Emulator Configuration (for development)
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199